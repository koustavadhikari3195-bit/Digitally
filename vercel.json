{
    "version": 2,
    "builds": [
        {
            "src": "frontend/*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "clean": true
            }
        },
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/$1",
            "continue": true
        }
    ]
}